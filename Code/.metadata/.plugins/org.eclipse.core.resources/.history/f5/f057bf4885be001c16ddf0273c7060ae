package blackjack.view;

import java.net.URL;
import java.util.ResourceBundle;

import blackjack.Blackjack;
import javafx.fxml.FXML;
import javafx.fxml.Initializable;
import javafx.scene.control.Button;
import javafx.scene.control.TextField;
import javafx.stage.Stage;

public class AccueilControl implements Initializable {

	@FXML
	private Button boutonPlay ; 
	
	@FXML
	private TextField joueur1 ; 
	
	@FXML 
	private TextField joueur2 ; 
	
	private Blackjack blackjack ; 
	
	private Stage dialogStage;
	
	
	public void setDialogStage(Stage dialogStage1) {
		this.dialogStage = dialogStage1;
	}
	
	public void setBlackJack(Blackjack blackJack) {
		this.blackjack = blackJack;
	}
	
	
	private void checkTextField() {
		while(this.joueur1.getText().equals(null) || this.joueur2.getText().equals(null)) {
			this.boutonPlay.setDisable(true);
		}
	}
	
	@FXML
	private void actionPlay() {
		this.blackjack.loadBlackJackApp();
	}
	
	private  void actionQuit() {
		this.dialogStage.close();
	}
	
	
	@Override
	public void initialize(URL arg0, ResourceBundle arg1) {
		// TODO Auto-generated method stub

	}

}

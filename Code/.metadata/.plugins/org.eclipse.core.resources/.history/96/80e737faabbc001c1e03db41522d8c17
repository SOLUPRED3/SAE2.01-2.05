package blackjack.om;

import javafx.beans.property.SimpleIntegerProperty;

/**
 * @author falsimagne
 */
public class Joueur {

	/**
	 * Nom du joueur.
	 */
	private String nom;

	/**
	 * Main du joueur.
	 */
	private MainBlackjack main;

	/**
	 * Une propriété qui représente la monnaie du joueur.
	 */
	private SimpleIntegerProperty money = new SimpleIntegerProperty(0);

	/**
	 * Une propriété qui représente la mise actuelle du joueur.
	 */
	private int miseCourante ;

	public Joueur(String nom, int firstMise) {
		this.nom = nom;
		this.money.set(firstMise);
	}

	/*
	 * Méthode qui réinitialise la main.
	 */
	public void reset() {
		main.viderMain();
	}


	/** GETTERS ET SETTERS **/

	public String name() {
		return nom;
	}

	public void setName(String nom) {
		this.nom = nom;
	}

	public SimpleIntegerProperty moneyReturnProperty() {
		return money;
	}

	public int money() {
		return money.get();
	}

	public void setMoney(int somme) {
		money.set(somme);
	}

	public MainBlackjack hand() {
		return main;
	}

	public void setHand(MainBlackjack main) {
		this.main = main;
	}

	
	public int getMiseCourante() {
		return this.miseCourante ;
	}

	public void setMiseCourante(int miseCourante) {
		this.miseCourante = miseCourante);
	}
}
